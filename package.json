{
  "name": "q-applet-weather",
  "displayName": "Weather Forecast",
  "version": "2.0.0",
  "description": "Display weather forecast on a Das Keyboard Q",
  "longDescription": "Be aware of the upcoming storm, ice age or heat wave coming to your place with the Q Weather applet.",
  "officialProductName": "Weather Forecast",
  "appUrl": "",
  "isSingleton": false,
  "videoUrl": "",
  "icon": "assets/q-weather.png",
  "image": "assets/q-weather-image.png",
  "publisher": "Das Keyboard",
  "authorName": "Das Keyboard team",
  "authorUrl": "https://twitter.com/daskeyboard",
  "issuesUrl": "https://github.com/daskeyboard/q-applet-weather/issues",
  "homePageUrl": "https://github.com/dasKeyboard/q-applet-weather",
  "developerRepoUrl": "https://github.com/daskeyboard/q-applet-weather",
  "license": "GPL",
  "licenseUrl": "http://www.gnu.org/licenses/old-licenses/gpl-2.0.txt",
  "changelogUrl": "https://github.com/daskeyboard/daskeyboard-applet--weather-forecast/blob/master/CHANGELOG.md",
  "readMeUrl": "https://github.com/daskeyboard/daskeyboard-applet--weather-forecast/blob/master/README.md",
  "readMeEndUserUrl": "https://github.com/daskeyboard/daskeyboard-applet--weather-forecast/blob/master/README_ENDUSER.md",
  "engines": {
    "das-keyboard-q": "3.1.x"
  },
  "qActionUrl": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "daskeyboard-applet": "^2.7.13",
    "moment": "^2.22.2",
    "xml2js": "^0.4.19"
  },
  "qConfig": {
    "geometry": {
      "width": 4,
      "height": 1,
      "defaults": {
        "origin": {
          "x": 1,
          "y": 1
        }
      }
    },
    "applet": {
      "defaults": {
        "cityId": "http://www.yr.no/place/United_States/Texas/Austin/forecast.xml",
        "cityId_LABEL": "Austin, Texas (United States)",
        "units": "metric",
        "units_LABEL": "Metric"
      }
    },
    "questions": [
      {
        "key": "cityId",
        "label": "Choose a city",
        "help": "select a location from the list",
        "required": true,
        "order": 1,
        "controlType": "dropdown",
        "dynamic": true,
        "options": []
      },
      {
        "key": "units",
        "label": "Choose a unit type",
        "help": "select a unit type",
        "required": true,
        "order": 2,
        "controlType": "dropdown",
        "options": [
          {
            "key": "metric",
            "value": "Metric"
          },
          {
            "key": "imperial",
            "value": "Imperial"
          }
        ]
      }
    ],
    "requirements": {
      "applet": {
        "zoneId": "select"
      }
    }
  },
  "devDependencies": {
    "mocha": "^5.2.0"
  }
}
